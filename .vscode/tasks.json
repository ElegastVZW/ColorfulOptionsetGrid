            "command": "pac pcf version -s manifest",
            "problemMatcher": []
        },
        {       
            "label": "buildDebug",             
            "type": "shell",            
            "command": "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\Enterprise\\MSBuild\\Current\\Bin\\MSBuild.exe\"",
            "args": [     
                "Solution/ColorfulOptionsetGridSol"               
            ],
            "problemMatcher": [ "$msCompile"],
